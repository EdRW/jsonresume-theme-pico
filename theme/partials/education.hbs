{{#if resume.education.length}}
<div class="container education-container">
  <h2>Education</h2>

  {{#each resume.education}}
  {{#if breakBefore}}
  <section class="item page-break">
    {{#if institution}}
    <h3>
      {{#if url}}
      <a target="_blank" href="{{ url }}">{{ institution }}</a>
      {{else}}
      {{ institution }}
      {{/if}}

      {{#if location}}
      <small class="location">
        <span class="fas fa-map-marker-alt"></span>
        <span class="work-location">{{ location }}</span>
      </small>
      {{/if}}
    </h3>
    {{/if}}

    {{#if location}}
    <h5 class="location">{{ location }}</h5>
    {{/if}}

    <h5 class="italic pull-right">
      {{#if startDate}}
      <span class="startDate">{{MY startDate}}</span>
      {{#if endDate}}
      <span class="endDate"> - {{MY endDate}}</span>
      {{else}}
      <span class="endDate"> - Present</span>
      {{/if}}
      {{else if releaseDate}}
      {{MY releaseDate}}
      {{else if date}}
      {{MY date}}
      {{/if}}
    </h5>

    <h4>
      {{#if studyType}}{{ studyType }} {{/if}}{{#if area}}{{ area }}{{/if}}
    </h4>

    {{#if gpa}}
    <h5>{{ gpa }}</h5>
    {{/if}}
    {{#if specialization}}
    <h5 class="specialization">{{ specialization }}</h5>
    {{/if}}
    {{#if courses.length}}
    <ul class="two-column">
      {{#each courses}}
      <li>{{.}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </section>
  {{else}}
  <section class="item">
    {{#if institution}}
    <h3>
      {{#if url}}
      <a target="_blank" href="{{ url }}">{{ institution }}</a>
      {{else}}
      {{ institution }}
      {{/if}}
    </h3>
    {{/if}}
    {{#if location}}
    <h5 class="location">{{ location }}</h5>
    {{/if}}

    <h5 class="italic pull-right">
      {{#if startDate}}
      <span class="startDate">{{MY startDate}}</span>
      {{#if endDate}}
      <span class="endDate"> - {{MY endDate}}</span>
      {{else}}
      <span class="endDate"> - Present</span>
      {{/if}}
      {{else if releaseDate}}
      {{MY releaseDate}}
      {{else if date}}
      {{MY date}}
      {{/if}}
    </h5>

    <h4>
      {{#if studyType}}{{ studyType }} {{/if}}{{#if area}}{{ area }}{{/if}}
    </h4>

    {{#if gpa}}
    <h5>{{ gpa }}</h5>
    {{/if}}
    {{#if specialization}}
    <h5 class="specialization">{{ specialization }}</h5>
    {{/if}}
    {{#if courses.length}}
    <ul class="two-column">
      {{#each courses}}
      <li>{{.}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </section>
  {{/if}}
  {{/each}}
</div>
{{/if}}
