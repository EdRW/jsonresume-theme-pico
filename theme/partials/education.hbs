{{#if resume.education.length}}
<div>
  <h3>Education</h3>

  {{#each resume.education}}

  <div class="item {{#if breakBefore}}page-break{{/if}}">
    <header class="dated-header">
      {{#if institution}}
      <h5>
        {{#if url}}
        <a target="_blank" href="{{ url }}">{{ institution }}</a>
        {{else}}
        {{ institution }}
        {{/if}}

        {{#if location}}
        <small class="location">
          <span class="fas fa-map-marker-alt"></span>
          <span class="work-location">{{ location }}</span>
        </small>
        {{/if}}
      </h5>
      {{/if}}

      {{#if location}}
      <span class="location">{{ location }}</span>
      {{/if}}

      <em class="italic pull-right">
        {{#if startDate}}
        <span class="startDate">{{MY startDate}}</span>
        {{#if endDate}}
        <span class="endDate"> - {{MY endDate}}</span>
        {{else}}
        <span class="endDate"> - Present</span>
        {{/if}}
        {{else if releaseDate}}
        {{MY releaseDate}}
        {{else if date}}
        {{MY date}}
        {{/if}}
      </em>
    </header>

    <p>
      {{#if studyType}}{{ studyType }}{{#if area}}, {{/if}}{{/if}}{{#if area
      }}{{ area }}{{/if}}
    </p>

    {{#if gpa}}
    <h5>{{ gpa }}</h5>
    {{/if}}
    {{#if specialization}}
    <h5 class="specialization">{{ specialization }}</h5>
    {{/if}}
    {{#if courses.length}}
    <ul class="two-column">
      {{#each courses}}
      <li>{{.}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </div>
  {{/each}}
</div>
{{/if}}
