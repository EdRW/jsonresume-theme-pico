{{#if resume.work.length}}
<section class="section">
  <header>
    <h3 class="section-title">Experience</h3>
  </header>

  <section id="work">
    {{#nestedWork resume.work}}
    {{#each this}}
    <header class="page-break">
      {{#if name}}
      <h4>
        {{#if url}}
        <a target="_blank" href="{{ url }}">{{ name }}</a>
        {{else}}
        {{ name }}
        {{/if}}

        {{#if location}}
        <small class="location">
          <span class="fas fa-map-marker-alt"></span>
          <span class="work-location">{{ location }}</span>
        </small>
        {{/if}}
      </h4>
      {{/if}}
      {{#if description}}
      <p class="description">{{ description }}</p>
      {{/if}}
    </header>

    {{#if items.length}}
    <div class="timeline">
      {{#each items}}
      <div>
        {{#if summary}}
        <div class="page-break">
          <label for="work-item-{{@index}}"></label>
          {{/if}}

          <header class="dated-header">
            {{#if position}}
            <h5 class="position">{{ position }}</h5>
            {{/if}}
            <em class="date">
              {{#if startDate}}
              <span class="startDate">{{MY startDate}}</span>
              {{/if}}
              {{#if endDate}}
              <span class="endDate">- {{MY endDate}}</span>
              {{else}}
              <span class="endDate">- Current</span>
              {{/if}}
            </em>
          </header>

          {{#if keywords.length}}
          <ul class="keywords">
            {{#each keywords}}
            <li class="page-break">{{ this }}</li>
            {{/each}}
          </ul>
          {{/if}}

          {{#if summary}}
          {{!--
          <div class="summary">{{paragraphSplit summary}}</div>
          --}}
          <div class="summary">{{ summary }}</div>
          {{/if}}
        </div>

        <div class="item" id="work-item">
          {{#if highlights.length}}
          <ul class="highlights">
            {{#each highlights}}
            {{!--
            <li>{{paragraphSplit this}}</li>
            --}}
            <li class="page-break">{{ this }}</li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>

      {{/each}}
    </div>
    {{/if}}

    {{#unless  @last}}
    <hr class="dotted-hr" />
    {{/unless}}
    {{/each}}
    {{/nestedWork}}
  </section>
</section>
{{/if}}
