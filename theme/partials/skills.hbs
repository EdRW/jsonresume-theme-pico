{{#if resume.skills.length}}
<section id="skills">
  <h3>Skills</h3>
  <div>
    {{#each resume.skills}}
    <div>
      {{#if name}}
      <h4>
        {{ name }}
      </h4>
      {{/if}}
      {{#if level}}
      <div>
        <em>{{ level }}</em>
      </div>
      {{/if}}
      {{#if keywords.length}}
      <ul class="keywords">
        {{#each keywords}}
        <li>{{ this }}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
    {{/each}}
  </div>
</section>
{{/if}}
